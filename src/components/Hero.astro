---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import xidpSvg from "@/assets/xidp.svg?url";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
---

<section class="py-10 flex md:flex-row flex-col px-4 md:px-0 gap-10 md:gap-0 items-center">
  <div class="flex flex-col gap-6 justify-center items-start md:w-1/2">
    <!-- <h1 class="text-pblack">Hi, my name is Joaquín Sorolla</h1> -->
    <p class="text-6xl font-bold">XID-Protocol</p>
      <p>
        Enterprise-grade, Infinitely-Scalable, Distributed Identity-Data Protocol
      </p>
      <p>
        Unify and standardize distributed enterprise data to unlock its true value.
      </p>
      <p>
        Enable seamless data interaction within teams, across organizations, and with external partners through unified standards.
      </p>
    
    <a
      rel="noopener noreferrer"
      href="https://jramma.com"
      target="_blank"
      class="bg-pgreen px-5 py-3 border-1 border-black rounded-lg shadow-card hover:shadow-hover transition"
    >
      Docs
    </a>
  </div>
     <div class="md:w-1/2 flex items-center justify-center">
    <img 
      src={xidpSvg}
      alt="XID Protocol Diagram" 
      class="w-full h-auto object-contain"
    />
  </div>

